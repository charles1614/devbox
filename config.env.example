# ==============================================================================
# Devbox Configuration Example
# Copy this file to config.env and customize the values for your environment
# ==============================================================================

# User configuration
USERNAME="your_username"
USER_ID=1000
GROUP_ID=1000

# Setup script configuration
SETUP_SCRIPT_URL="https://raw.githubusercontent.com/your-username/dotfiles/main/dot_config/xsetup/run.sh"

# Docker configuration
DOCKER_BASE_IMAGE="ubuntu:22.04"
DOCKER_BUILD_OPTIONS=""

# APT packages to install (space-separated)
APT_PACKAGES="build-essential git curl unzip jq libssl-dev zlib1g-dev libbz2-dev libreadline-dev libsqlite3-dev libncurses5-dev libffi-dev zsh bat ripgrep fd-find"

# File paths
RESOURCES_DIR="resources"
SCRIPTS_DIR="scripts"
TESTS_DIR="tests"
DOCKER_DIR="docker"

# Archive naming
HOME_ARCHIVE_NAME="${USERNAME}_home.tar.gz" 